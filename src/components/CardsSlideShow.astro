---
const slideItems = [
    {
        name: "Nikita A",
        position: "Serial entrepreneur & product director with architecture, product design, marketing & software development background.",
        image: "nikita-a.png",
    },
    {
        name: "Maxim K",
        position: "Jitsu enjoyer, software engineer, and product manager with a background in computer science and machine learning.",
        image: "maxim-k.jpeg",
    }
]
---

<div class='xs:min-h-none min-h-[340px] h-fit w-full rounded-[20px] relative bg-[#F8F8F8] md:order-2 order-3'>
    {slideItems.map((slideItem, index) => (
            <div class={`slide slide-items fade ${index === 0 ? 'active' : ''}`}>
                <img src={`/${slideItem.image}`} alt={slideItem} class="w-20 h-30 rounded-[20px] object-cover" width="80" height="120"/>
                <p class="mt-4 md:text-[20px] text-[16px] md:leading-[32px] leading-[24px] font-medium">{slideItem.name}</p>
                <p class="mt-1 text-gray md:text-[20px] text-[16px] md:leading-[32px] leading-[24px] font-medium">{slideItem.position}</p>
            </div>

    ))}
        <div class="dots-container">
            {slideItems.map((_, index) => (
                    <span class={`dot ${index === 0 ? 'active-dot' : ''}`}></span>
            ))}
        </div>
</div>

<script>
    let slideIndex = 0;

    function showSlides() {
        let slides = document.getElementsByClassName('slide-items');
        let dots = document.getElementsByClassName('dot');

        // Remove active class from all slides
        for (let i = 0; i < slides.length; i++) {
            slides[i].classList.remove('active');
            dots[i].classList.remove('active-dot');  // Remove active class from all dots
        }

        slideIndex++;

        if (slideIndex > slides.length) {
            slideIndex = 1;
        }

        slides[slideIndex - 1].classList.add('active'); // Add active class to current slide
        dots[slideIndex - 1].classList.add('active-dot'); // Add active class to current dot

        setTimeout(showSlides, 2000);
    }


    showSlides();
</script>


<style>
    .slide {
        opacity: 0;
        display: flex;
        flex-direction: column;
        visibility: hidden;
        transition: opacity 1s, visibility 1s; /* Add visibility to the transition */
        align-items: start;
        border-radius: 20px;
        justify-content: start;
        padding: 20px;
        width: 100%;
        height: 100%;
        background: #F8F8F8;
        position: absolute; /* Make slides absolute to overlap */
        top: 0;
        left: 0;
        z-index: 1; /* Default z-index */
    }

    .slide.active {
        z-index: 2;
        opacity: 1;
        visibility: visible;
    }

    .fade {
        animation-name: fade;
        animation-duration: 1s;
    }

    @keyframes fade {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .dots-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        position: absolute;
        left: 0;
        bottom: 0;
        z-index: 1000;
    }

    .dot {
        height: 8px;
        width: 8px;
        background-color: #bbb;
        border-radius: 50%;
        margin: 0 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .dot.active-dot {
        background-color: black;
    }

</style>